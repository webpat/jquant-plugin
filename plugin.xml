<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            name="Sample Page"
            nameFilter="*.*"
            class="org.jquant.plugin.properties.SamplePropertyPage"
            id="jquantplugin.properties.samplePropertyPage">
         <enabledWhen>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.jquant.plugin.launch.BacktestLauchConfigurationDelegate"
            id="org.jquant.launching.backtest"
            modes="run, debug"
            name="Backtest"
            public="true"
            sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
            sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
      </launchConfigurationType>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.jquant.plugin.launch.BacktestTabGroup"
            id="org.jquant.launching.tabgroup.backtest"
            type="org.jquant.launching.backtest">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabs">
      <tab
            class="org.jquant.plugin.launch.BacktestLaunchConfigurationTab"
            group="org.jquant.launching.group.backtest"
            id="org.jquant.plugin.backtestLaunchConfigurationTab"
            name="backtest">
      </tab>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchGroups">
      <launchGroup
            bannerImage="$nl$/icons/money.png"
            id="org.jquant.launching.group.backtest"
            image="$nl$/icons/money.png"
            label="Debug"
            mode="debug">
      </launchGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.jquant.launching.backtest"
            icon="$nl$/icons/money.png"
            id="org.jquant.launching.image.backtest">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.jquant.plugin.launch.BacktestLaunchShortcut"
            icon="$nl$/icons/money.png"
            id="org.jquant.launching.shortcut"
            label="backtest"
            modes="run, debug">
         <contextualLaunch>
            <enablement>
               <count
                     value="1">
               </count>
            </enablement>
         </contextualLaunch>
         <configurationType
               id="org.jquant.launching.backtest">
         </configurationType>
         <description
               description="run as backtest"
               mode="run">
         </description>
         <description
               description="debug as backtest"
               mode="debug">
         </description>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.jquant.plugin.PerspectiveFactory"
            id="org.jquant.backtestPerspective"
            name="Backtest Perspective">
      </perspective>
   </extension>
   <extension
         id="org.jquant.views"
         name="Bactest Views"
         point="org.eclipse.ui.views">
      <category
            id="org.jquant.category"
            name="Backtest">
      </category>
      <view
            allowMultiple="false"
            category="org.jquant.category"
            class="org.jquant.plugin.StrategyResultView"
            icon="icons/money.png"
            id="org.jquant.view.backtestResults"
            name="Backtest Results View"
            restorable="true">
      </view>
   </extension>
 </plugin>
